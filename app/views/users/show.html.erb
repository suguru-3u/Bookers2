<div class='container'>
<% if flash[:notice] %>
  <div class="text-success">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class='row'>
  <%= render 'layouts/new' %>

    <div class="col-xs-9">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr><th></th><th>Title</th><th>Opnion</th></tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg"%></td>
            <td><%= link_to book.title,book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
