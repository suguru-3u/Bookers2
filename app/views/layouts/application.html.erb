<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar  navbar-inverse">
      <div class="container ">
          <nav class="nav navbar-left">
            <span class="top-span">Bookers</span>
          </nav>
          <nav class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to ' Home', user_path(current_user.id), class: "nav-link glyphicon glyphicon-home link"%>
              </li>
              <li class="nav-item">
                <%= link_to ' Users', users_path,class: "nav-link glyphicon glyphicon-user link"%>
              </li>
              <li class="nav-item">
                <%= link_to ' Books', books_path,class: "nav-link glyphicon glyphicon-book link"%>
              </li>
              <li class="nav-item">
                <%= link_to ' logout', destroy_user_session_path, method: :delete, class: "nav-link glyphicon glyphicon-log-out link"%>
              </li>
              <% else %>
              <li class="nav-item">
                <%= link_to ' Home', root_path,class: "nav-link glyphicon glyphicon-home"%>
              </li>
              <li class="nav-item">
                <%= link_to ' About', home_about_path,class: "nav-link glyphicon glyphicon-link"%>
              </li>
              <li class="nav-item">
                <%= link_to ' Sign up', new_user_registration_path,class: "nav-link glyphicon glyphicon-edit"%>
              </li>
              <li class="nav-item">
                <%= link_to ' Login', new_user_session_path,class: "nav-link glyphicon glyphicon-log-in"%>
              </li>
            </ul>
            <% end %>
          </nav>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
