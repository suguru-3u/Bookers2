<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: 'box-top' %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",class: 'box-top'%>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="field">
    <%= f.check_box :remember_me ,class: 'box-top'%>
    <%= f.label :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class: 'box-top btn btn-primary btn-md'%>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>

  <div class="col-xs-3 col-xs-offset-9">
    <p >CopyRight Suguru.inc</p>
  </div>

</div>
