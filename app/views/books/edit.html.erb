<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
       <div class="warning">
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
         <ul>
          <% @book.errors.full_messages.each do |mssage| %>
           <li><%= mssage %></li>
          <% end %>
          </ul>
       </div>
      <% end %>
      <div class="form-group">
        <%= form_for @book do |f| %>
        <%= f.label :Title %><br>
        <%= f.text_field :title, class: 'form-control' %><br>
        <%= f.label :Opinion %><br>
        <%= f.text_area :body, class: 'form-control' %><br>
        <%= f.submit "Update Book",class: 'btn btn-primary btn-block' %>
        <% end %>
        <%= link_to 'Show',book_path(@book)%> |
        <%= link_to 'Back',books_path%>
      </div>
    </div>
  </div>

</div>
