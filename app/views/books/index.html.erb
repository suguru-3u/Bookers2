<div class="container">
  <% if @book.errors.any? %>
  <div class="warning">
    <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |mssage| %>
      <li><%= mssage %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="row">
    <%= render 'layouts/new' %>

    <div class="col-xs-9">
      <h2>Book</h2>
      <table class="table">
          <thead>
            <tr><th></th><th>Title</th><th>Opinion</th></tr>
          </thead>
          <tbody>
          <% @books.each do |books| %>
          <tr>
            <td><%= link_to user_path(books.id) do %><%= attachment_image_tag books.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><% end %></td>
              <td><%= link_to books.title,book_path(books) %></td>
              <td><%= books.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
