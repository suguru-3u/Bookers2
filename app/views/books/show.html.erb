<div class="container">
  <% if flash[:notice] %>
   <%= flash[:notice] %>
  <% end %>
  <div class="row">
    <%= render 'layouts/new' %>

    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @user,:profile_image, :fill, 90, 80, format: 'jpeg', fallback: "no_image.jpg" %><br>
              <%= link_to @user.name,user_path(@user),class: 'book-show-text' %><td>
                <td><%= @books.title %></td>
                <td><%= @books.body %></td>
                <%if @user.id == current_user.id %>
                <td><%= link_to 'Edit', edit_book_path(@books.id), class: 'btn btn-success btn-xs'%></td>
                <td><%= link_to 'Destroy',book_path(@books.id), method: :delete,data:{confirm:"本当にいいんですか？"}, class: 'btn btn-danger btn-xs'%></td>
                <% end %>
              </tr>
            </tbody>
          </table>

    </div>
  </div>
</div>
